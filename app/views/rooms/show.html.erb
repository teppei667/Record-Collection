<% @entries.each do |entry| %>
  <% current_end_user == entry.end_user ? @class = "current_end_user" : @class = "" %>
  <% if entry.end_user != current_end_user %>
    <h5 class="text-left <%= @class %>" id="<%= @class %>" style="font-size: 30px;" data-id="<%= entry.end_user.id %>">
      <%= link_to "@#{entry.end_user.name}", end_user_path(entry.end_user_id) %>
    </h5>
  <% else %>
    <h5 class="text-left <%= @class %>" id="<%= @class %>" data-id="<%= entry.end_user.id %>"></h5>
  <% end %>
<% end %>

 <!--me内容は部分テンプレートにします-->
<div id="direct_messages" data-room_id="<%= @room.id %>">
  <%= render @direct_messages %>
</div>

<form>
   <label id="target">新しいメッセージを作成</label><br>
    <input type="text" id="chat-input" data-behavior="room_speaker" class="form-control">
</form>

<script>
  //トークルームに入室すると入力フォームまでスクロールする
  let element = document.getElementById('target');
  let rect = element.getBoundingClientRect();
  let position = rect.top;
  setTimeout( function() {
    scrollTo(0, position);}
  , 1000);
</script>


<div class="container">
  <%= form_with model: @contact, url: confirm_path, local: true do |f| %>
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, placeholder: "名前", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_field :email, placeholder: "メール", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.text_area :message, placeholder: "お問い合わせ内容", size: '10x10', class: 'form-control' %>
    </div>

    <div>
      <%= f.submit '入力内容確認' %>
    </div>
  <% end %>
</div>
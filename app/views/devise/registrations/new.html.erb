<div class="text-center sign-in-up">
  <div class="container sign-in-wrapper">
    <h2 class="text-white sign-in-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group form-group-lg mt-5">
        <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "name", class: "col-form-label border-0 rounded-pill col-sm-6" %>
      </div>

      <div class="form-group form-group-lg mt-5">
        <%= f.email_field :email, autocomplete: "email",placeholder: "email", class: "col-form-label border-0 rounded-pill col-sm-6" %>
      </div>

      <div class="form-group form-group-lg mt-5">
        <%= f.password_field :password, autocomplete: "new-password",placeholder: "password", class: "col-form-label border-0 rounded-pill col-sm-6" %>
      </div>

      <div class="form-group form-group-lg mt-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "password(確認用)", class: "col-form-label border-0 rounded-pill col-sm-6" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "Sign up", class: "btn btn-outline-light" %>
      </div>
    <% end %>


  </div>
</div>
<%= render "devise/shared/links" %>
<div class="container">
  <div class="text-center">
    <h1>profile</h1>
  </div>
  <div class="row">
    <div class="col-4 text-center mt-5">
      <p><%= attachment_image_tag @end_user, :profile_image, fallback: "no-image2.jpg", size:'180x180', class: "rounded-circle" %></p>
      <h2 class="d-inline"><%= @end_user.name %></h2>
      <!--他人のプロフィールを見る場合-->
      <% if @end_user.id != current_end_user.id %>
        <% if current_end_user.following?(@end_user) %>
          <%= link_to "フォロー中", end_user_relationships_path(@end_user.id), method: :delete, class: "btn btn-outline-light btn-sm ml-3" %>
        <% else %>
          <%= link_to "フォーロする", end_user_relationships_path(@end_user.id), method: :post, class: "btn btn-light btn-sm ml-3" %>
        <% end %>
      <!--自分のプロフィールを見る場合-->
      <% else %>
        <%= link_to "編集", edit_end_user_path(@end_user.id) %>
      <% end %>
      <p class="mt-3 text-white"><%= @end_user.introduction %></p>
      <div>
        <%= link_to "フォロー", end_user_followings_path(@end_user.id) %>
        <%= link_to "フォロワー", end_user_followers_path(@end_user.id) %>
      </div>
      <div class="mt-3">
        <% unless @end_user.id == current_end_user.id %>
          <!--ルームが存在していれば既存のルームへ-->
          <% if @isRoom == true %>
            <%= link_to room_path(@roomId) do %>
              <i class="far fa-envelope h3"></i>
            <% end %>
          <!--ルームが存在していなければルームを作成する  -->
          <% else %>
            <%= form_for @room, url: rooms_path do |f| %>
              <%= fields_for @entry do |e| %>
                <%= e.hidden_field :end_user_id, :value=> @end_user.id %>
              <% end %>
              <button type="submit" id="dm_submit"><i class="fas fa-envelope"></i></button>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-8 mt-5">
      <!--自分のプロフィールを見る場合-->
      <% if @end_user.id == current_end_user.id %>
        <h2 class="text-center">my favorites</h2>
        <% @my_favorites.each do |my_favorite| %>
          <%= link_to record_path(my_favorite.record.id) do %>
            <%= attachment_image_tag my_favorite.record, :image, fallback: "no-image.png", size:'200x200', class: "m-2" %>
          <% end %>
        <% end %>
        <div class="text-right">
          <%= link_to "お気に入り一覧へ", my_favorite_path(@end_user.id) %>
        </div>
      <!--他人のプロフィールを見る場合-->
      <% else %>
        <h2 class="text-center">Records</h2>
        <% @records.each do |record| %>
          <%= link_to record_path(record.id) do %>
            <%= attachment_image_tag record, :image, fallback: "no-image.png", size:'200x200', class: "m-2" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
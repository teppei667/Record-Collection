<div class="container">
  <div class="text-center mb-3 new-collection">
    <%= link_to image_tag("new-collection.png"), new_record_path, class: "img-fluid new-collection-icon" %>
  </div>
  <div class="mb-5 d-flex justify-content-around flex-wrap">
    <% @records.each do |record| %>
      <%= link_to record_path(record.id), class: "my-record" do %>
        <%= attachment_image_tag record, :image, fallback: "no-image.png", size:'200x200', class: "mb-2 shadow" %>
      <% end %>
    <% end %>
  </div>

</div>
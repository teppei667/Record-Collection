<div class="container text-center mb-5">
  <h3 class="mb-5 mt-4"><%= @end_user.name %>のフォロー一覧</h3>
  <% @end_users.each do |end_user| %>
    <div class="text-white text-center mb-2">
      <%= attachment_image_tag end_user, :profile_image, fallback: "no-image.png", size: '80x80', class: "mr-5 rounded-circle" %>
      <%= link_to end_user.name, end_user_path(end_user.id) , class: "mr-3" %>
      <div class="d-inline" id="follow_btns_<%= end_user.id %>">
        <%= render partial: 'relationships/follows', locals: { end_user: end_user } %>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <%= link_to @record.end_user.name, end_user_path(@record.end_user_id) %></br>
  <%= attachment_image_tag @record, :image, fallback: "no-image.png", size:'200x200' %></br>
  <%= @record.title %></br>
  <%= @record.artist_name %></br>
  <%= @record.release_date %></br>
  <%= @record.introduction %></br>
  <%= link_to "編集", edit_record_path(@record.id) %>
  <%= link_to "削除", record_path(@record.id), method: :delete %>
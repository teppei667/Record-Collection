<div class="container text-center">
  <%= link_to "user", end_users_path %></br>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class="text-right form-group form-group-lg">
        <%= f.text_field :keyword, value: @keyword, class: "col-form-label border-0 rounded-pill col-sm-4" %>
        <%= f.submit "検索", class: "btn btn-outline-light" %>
      </div>
    <% end %>
  <div class="d-flex flex-row flex-wrap">
    <% @records.each do |record| %>
      <%= link_to record_path(record.id) do %>
        <%= attachment_image_tag record, :image, fallback: "no-image.png", size:'200x200', class: "m-2" %>
      <% end %>
    <% end %>
  </div>
</div>
